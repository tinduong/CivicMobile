            <Grid Padding="25" Grid.Row="1" RowSpacing="15">
                <Border
                    Padding="24,32"
                    MinimumHeightRequest="150"
                    BackgroundColor="white"
                    StrokeThickness="0"
                    HorizontalOptions="Fill"
                    VerticalOptions="End"
                    Margin="0">
                    <Border.Shadow>
                        <Shadow Brush="gray" Offset="2,0" Opacity="0.3" />
                    </Border.Shadow>
                    <VerticalStackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                        <Label HorizontalOptions="CenterAndExpand" FontAttributes="Bold" Text="YOUR STUDY GUIDE INFO" />
                        <VerticalStackLayout Margin="10" VerticalOptions="Center" HorizontalOptions="Center">
                            <Label>Select Exam Date</Label>
                            <DatePicker MinimumDate="{Binding MinExamDate}"
                                        BackgroundColor="Azure"
                                        MaximumDate="12/31/2099"
                                        Date="06/21/2022" />
                        </VerticalStackLayout>

                        <VerticalStackLayout Margin="10" HorizontalOptions="Center" VerticalOptions="Center">
                            <Picker
                                Title="Select your state"
                                HorizontalOptions="EndAndExpand"
                                BackgroundColor="Azure"
                                ItemsSource="{Binding AvailableStates}"
                                SelectedItem="{Binding SelectedState}"
                                VerticalOptions="Start" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Border>
            </Grid>
        </Grid>
    </ScrollView>
